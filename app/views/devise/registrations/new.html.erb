<div class="w-full max-w-md bg-white shadow-lg rounded-xl p-8 space-y-8">
    <div>
        <h2 class="mt-6 text-center text-3xl font-bold text-gray-900">
        アカウントを作成
        </h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "..." }) do |f| %>
        <div class="rounded-md shadow-sm -space-y-px">
            <div>
                <%= f.label :email, "メールアドレス", class: "sr-only" %>
                <%= f.email_field :email, autocomplete: "email", required: true,
                    class: "appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 text-lg",
                    placeholder: "メールアドレス" %>
            </div>

            <div>
                <%= f.label :password, "パスワード", class: "sr-only" %>
                <%= f.password_field :password, autocomplete: "new-password", required: true,
                    class: "appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 text-lg",
                    placeholder: "パスワード" %>
            </div>

            <div>
                <%= f.label :password_confirmation, "パスワード（確認）", class: "sr-only" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,
                    class: "appearance-none rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 text-lg",
                    placeholder: "パスワード（確認）" %>
            </div>
        </div>

        <div>
            <%= f.submit "登録", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-lg font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
        </div>
    <% end %>
    <div class="text-sm text-center">
        <%= link_to 'アカウントをお持ちですか？ログインはこちら', new_user_session_path, class: 'font-medium text-blue-600 hover:text-blue-500' %>
    </div>
</div>
