<div id="task-detail" class="w-full bg-gray-50 rounded-xl p-6 shadow-md transition-all duration-300 ease-in-out">
    <div class="space-y-2 text-gray-700">
        <div class="flex items-center h-10">
            <span class="font-semibold text-lg w-24">タスク名:</span>
            <span class="text-lg font-bold text-gray-800"><%= task.title.presence || "無題" %></span>
        </div>
        <div class="flex items-center h-10">
            <span class="font-semibold text-lg w-24">重要度:</span>
            <span class="text-lg text-red-500 font-bold"><%= task.priority&.name.presence || "未選択" %></span>
        </div>
        <div class="flex items-center h-10">
            <span class="font-semibold text-lg w-24">締切:</span>
            <span class="text-lg"><%= task.deadline %></span>
        </div>
        <div class="flex items-center h-10">
            <span class="font-semibold text-lg w-24">カテゴリ:</span>
            <span class="text-lg"><%= task.category&.name.presence || "未選択" %></span>
        </div>
        <div class="flex items-center h-10">
            <span class="font-semibold text-lg w-24">進捗状況:</span>
            <span class="text-lg"><%= task.status.name %></span>
        </div>

        <hr class="my-4 border-gray-300">

        <div class="mt-4">
            <p class="font-semibold text-lg text-gray-800 mb-2">詳細</p>
            <p class="text-gray-700 leading-relaxed"><%= task.details.presence || "詳細はありません" %></p>
        </div>
    </div>
    <div class="text-right text-sm text-gray-500 mt-4">
        作成日時: <span class="font-semibold"><%= task.created_at.in_time_zone('Tokyo').strftime('%Y-%m-%d %H:%M:%S') %></span>
    </div>
</div>