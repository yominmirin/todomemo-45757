<div id="task-detail" class="w-full bg-gray-50 rounded-xl p-4 sm:p-6 shadow-md transition-all duration-300 ease-in-out">
  <div class="space-y-2 text-gray-700">
    <%# ラベルと値を縦並び＋横並びに切り替え %>
    <div class="flex flex-col sm:flex-row items-start sm:items-center">
      <span class="font-semibold text-lg sm:w-24 mb-1 sm:mb-0">タスク名:</span>
      <span class="text-lg font-bold text-gray-800 break-words"><%= task.title.presence || "無題" %></span>
    </div>

    <div class="flex flex-col sm:flex-row items-start sm:items-center">
      <span class="font-semibold text-lg sm:w-24 mb-1 sm:mb-0">重要度:</span>
      <span class="text-lg text-red-500 font-bold"><%= task.priority&.name.presence || "未選択" %></span>
    </div>

    <div class="flex flex-col sm:flex-row items-start sm:items-center">
      <span class="font-semibold text-lg sm:w-24 mb-1 sm:mb-0">締切:</span>
      <span class="text-lg"><%= task.deadline %></span>
    </div>

    <div class="flex flex-col sm:flex-row items-start sm:items-center">
      <span class="font-semibold text-lg sm:w-24 mb-1 sm:mb-0">カテゴリ:</span>
      <span class="text-lg"><%= task.category&.name.presence || "未選択" %></span>
    </div>

    <div class="flex flex-col sm:flex-row items-start sm:items-center">
      <span class="font-semibold text-lg sm:w-24 mb-1 sm:mb-0">進捗状況:</span>
      <span class="text-lg"><%= task.status.name %></span>
    </div>

    <hr class="my-4 border-gray-300">

    <div class="mt-4">
      <p class="font-semibold text-lg text-gray-800 mb-2">詳細</p>
      <p class="text-gray-700 leading-relaxed break-words"><%= task.details.presence || "詳細はありません" %></p>
    </div>
  </div>

  <div class="text-right text-sm text-gray-500 mt-4">
    作成日時: <span class="font-semibold"><%= task.created_at.in_time_zone('Tokyo').strftime('%Y-%m-%d %H:%M:%S') %></span>
  </div>
</div>