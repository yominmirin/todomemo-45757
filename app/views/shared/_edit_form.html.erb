<%= form_with(model: @task, url: task_path(@task), method: :patch, data: { turbo: true }) do |form| %>
    <div class="space-y-4">
        <div class="flex items-center h-10">
            <%= form.label :title, "タスク名", class: "font-semibold text-lg w-24 text-gray-700" %>
            <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 h-10" %>
        </div>
        <div class="flex items-center h-10">
            <%= form.label :priority_id, "重要度", class: "font-semibold text-lg w-24 text-gray-700" %>
            <%= form.select :priority_id, Priority.all.map { |p| [p.name, p.id] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 h-10" %>
        </div>
        <div class="flex items-center h-10">
            <%= form.label :deadline, "締切", class: "font-semibold text-lg w-24 text-gray-700" %>
            <%= form.date_field :deadline, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 h-10" %>
        </div>
        <div class="flex items-center h-10">
            <%= form.label :category_id, "カテゴリ", class: "font-semibold text-lg w-24 text-gray-700" %>
            <%= form.select :category_id, Category.all.map { |c| [c.name, c.id] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 h-10" %>
        </div>
        <div class="flex items-center h-10">
            <%= form.label :status_id, "進捗状況", class: "font-semibold text-lg w-24 text-gray-700" %>
            <%= form.select :status_id, Status.all.map { |s| [s.name, s.id] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 h-10" %>
        </div>
        <div class="flex flex-col">
            <%= form.label :details, "詳細", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :details, rows: 12, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
    </div>
    <div class="flex justify-end space-x-2 mt-6">
        <!-- キャンセルボタン -->
        <button type="submit"
                id="cancelEditButton"
                class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out cursor-pointer"
                name="task[needs_editing]"
                value="cancel">
            キャンセル
        </button>

        <!-- 編集中断ボタン -->
        <button type="submit"
                id="interruptEditButton"
                class="bg-orange-500 hover:bg-orange-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out cursor-pointer"
                name="task[needs_editing]"
                value="true">
            編集中断
        </button>

        <!-- 編集完了ボタン -->
        <button type="submit"
                id="completeEditButton"
                class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 ease-in-out cursor-pointer"
                name="task[needs_editing]"
                value="false">
            編集完了
        </button>
    </div>
<% end %>

